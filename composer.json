{
	"name": "wpshiftstudio/wc-membership-product",
	"description": "A WooCommerce plugin that adds a custom Membership product type with duration-based access control, conditional checkout fields, and automated expiration handling.",
	"type": "wordpress-plugin",
	"license": "MIT",
	"authors": [
		{
			"name": "Dilip Raghavan",
			"homepage": "https://www.wpshiftstudio.com"
		}
	],
	"require": {
		"php": ">=7.4"
	},
	"require-dev": {
		"phpunit/phpunit": "^9.5",
		"squizlabs/php_codesniffer": "^3.7",
		"wp-coding-standards/wpcs": "^3.0",
		"phpstan/phpstan": "^1.10"
	},
	"autoload": {
		"psr-4": {
			"WpShiftStudio\\WCMembershipProduct\\": "src/"
		}
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	},
	"scripts": {
		"phpcs": "phpcs",
		"phpcbf": "phpcbf",
		"phpstan": "phpstan analyse",
		"test": "phpunit"
	}
}
